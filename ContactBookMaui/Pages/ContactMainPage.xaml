<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactBookMaui.Pages.ContactMainPage"
             
             xmlns:viewmodel="clr-namespace:ContactBookMaui.ViewModels"
             x:DataType="{x:Type viewmodel:MainViewModel}"
             
             Title="Contact Main Page">
    
    <VerticalStackLayout Margin="15">

        <Button Grid.Row="0" Text="Nav - Add New Contact" Command="{Binding NavigateToAddContactCommand}" Margin="0,0,0,15"/>
        <Button Grid.Row="0" Text="Nav - List All Contacts" Command="{Binding NavigateToListAllContactCommand}" Margin="0,0,0,15"/>
        <Button Grid.Row="0" Text="Nav - Update Contact" Command="{Binding NavigateToUpdateContactCommand}" Margin="0,0,0,15"/>
        <Button Grid.Row="0" Text="Nav - Delete Contact" Command="{Binding NavigateToDeleteContactCommand}" Margin="0,0,0,15"/>

    </VerticalStackLayout>
    
</ContentPage>